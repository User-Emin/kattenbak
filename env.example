# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# For Hostinger: smtp.hostinger.com:587
# For Gmail: smtp.gmail.com:587
EMAIL_PROVIDER=smtp
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT=587
SMTP_USER="your-email@domain.com"
SMTP_PASSWORD="your_smtp_password"
EMAIL_FROM="noreply@yourdomain.com"

