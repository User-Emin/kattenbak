# Get your key from: https://backoffice.myparcel.nl/
MYPARCEL_API_KEY="your_myparcel_key_here"
MYPARCEL_WEBHOOK_URL="http://localhost:3101/api/v1/webhooks/myparcel"

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
